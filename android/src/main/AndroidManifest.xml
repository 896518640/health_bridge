<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.dnurse.health.plugin.dnurse_health_plugin">

    <!-- 三星健康SDK必要权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 华为Health Kit权限 -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.BODY_SENSORS"/>

    <!-- 健康数据权限 -->
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <!-- 可选：位置权限，如果需要GPS数据 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Android 11+ 包可见性查询 - Samsung Health SDK必需 -->
    <queries>
        <package android:name="com.sec.android.app.shealth" />
        <package android:name="com.samsung.android.wear.shealth" />
    </queries>

    <application>
        <!-- Samsung Health Data SDK meta-data for read permissions -->
        <meta-data
            android:name="com.samsung.android.health.permission.read"
            android:value="com.samsung.health.step_count;com.samsung.health.distance;com.samsung.health.heart_rate;com.samsung.health.weight;com.samsung.health.height;com.samsung.health.sleep;com.samsung.health.exercise" />

        <!-- Samsung Health Data SDK meta-data for write permissions -->
        <meta-data
            android:name="com.samsung.android.health.permission.write"
            android:value="com.samsung.health.weight;com.samsung.health.height" />
    </application>

</manifest>
